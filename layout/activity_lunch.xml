<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFEEA"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            android:src="@drawable/lunchh"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="Monday:A bowl of bean and vegetable soup drizzled and portion of fruit"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView03"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="Tuesday:Salad sandwich on whole grain bread, a small bag of root vegetable chips"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="Wednesday:Mashed avocado, roast turkey, and chopped tomatoes on two slices of whole grain toast"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView05"
            android:layout_width="325dp"
            android:layout_height="53dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="Thursday:A handful of blueberries,spinach and red rice."
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView06"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="Friday:Plenty of salad vegetables, such as cucumbers, peppers, diced tomatoes, and lettuce"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView07"
            android:layout_width="314dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="Saturday: Low-fat yogurt with fruit and cereal"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView08"
            android:layout_width="317dp"
            android:layout_height="61dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="Sunday:Frozen whole-grain waffle topped with low-fat cheese "
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>
