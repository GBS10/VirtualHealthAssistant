<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFEEA"
    tools:context=".MainActivity5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            android:src="@drawable/dinnerr"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="Monday:Greek yogurt with berries and nuts for dessert"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="Tuesday:A handful of strawberries, and an oat milk hot drink before bed."
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="Wednesday:Chicken and vegetable stir fry served with 1 cup of steamed brown rice"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView05"
            android:layout_width="329dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="Thursday:Veggie Korean bibimbap, kombucha drink."
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView06"
            android:layout_width="321dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="Friday:A two squares of dark chocolate with a handful of walnuts."
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView07"
            android:layout_width="336dp"
            android:layout_height="41dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="Saturday:One quarter cup Brazil nuts and a banana"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView08"
            android:layout_width="316dp"
            android:layout_height="47dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="Sunday:A slice of spinach one serving of green olives, kombucha drink."
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>
