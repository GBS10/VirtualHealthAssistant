<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFEEA"
    tools:context=".MainActivity5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/textView01"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="vertical"
            android:fontFamily="serif-monospace"
            android:text="HEADACHE"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:src="@drawable/headache" />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="330dp"
            android:layout_height="108dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="1.Place a cold pack on your forehead.Ice cubes wrapped in a towel or even cold shower may ease your pain"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView03"
            android:layout_width="333dp"
            android:layout_height="88dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="2.Drink plenty of liquids. Dehydration can cause a headache or make one worse."
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="333dp"
            android:layout_height="77dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            android:fontFamily="@font/alike"
            android:text="3.Try Massage-A few minutes massaging your forehead can help ease a tension headache. "
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button01"
            android:layout_width="216dp"
            android:layout_height="54dp"
            android:layout_below="@+id/TextView03"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/alike"
            android:layout_marginBottom="300dp"
            android:backgroundTint="#F6CBFA"
            android:textColor="@color/black"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="OnClick" />


    </LinearLayout>
</RelativeLayout>
