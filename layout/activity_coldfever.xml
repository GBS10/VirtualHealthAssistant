<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFEEA"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/textView01"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="vertical"
            android:fontFamily="serif-monospace"
            android:text="COLD/FEVER"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="351dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:src="@drawable/cold" />


        <TextView
            android:id="@+id/textView02"
            android:layout_width="335dp"
            android:layout_height="73dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="1. Stay Hydrated-Drink Water, juice, clear broth or warm lemon water with honey helps loosen congestion and prevents dehydration."
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView03"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="2.Rest:Your body needs rest and heal."
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="333dp"
            android:layout_height="91dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/alike"
            android:orientation="vertical"
            android:text="3.A saltwater gargle 1/2 teaspoon salt dissolved in glass of water can temporarily relieve a sore throat. "
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button01"
            android:layout_width="212dp"
            android:layout_height="54dp"
            android:layout_below="@+id/TextView03"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="75dp"
            android:layout_marginBottom="300dp"
            android:backgroundTint="#F6CBFA"
            android:textColor="@color/black"
            android:fontFamily="@font/alike"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="OnClick" />


    </LinearLayout>
</RelativeLayout>
